<h1><%= $player_1.name %> vs. <%= $player_2.name %></h1>
<h1>FIGHT!!!</h1>
<h1><%= $player_2.name %> - <%= $player_2.hp %>  HIT POINTS!</h1>

<form action="/attack" method='post'>
  <input type="submit" value="Attack">
</form>

<% if session[:attack] %>
  <h1><%= $player_2.name %> was attacked by <%= $player_1.name %></h1>
<% end %>
